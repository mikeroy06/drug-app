<!DOCTYPE html>
<html>
  <head>
    <title>Enhanced Care Program</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	<%= form_tag(drugs_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Drugs" %>
    <%= submit_tag "Search" %>
      <% end %>



    
  

  <%= yield %>
  </body>
</html>




